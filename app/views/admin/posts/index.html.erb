<div class="container-fluid">
  <div class="col-lg-8 mx-lg-auto">
    <div class="row p-0">
      <div class="col-lg-3">
        <%= render 'layouts/side' %>
      </div>
      <div class="col-lg-9">
        <div class="border-top">
          <div>
            <%= render 'layouts/search_post' %>
          </div>
          <div>
            <div>
              <table class="table">
                <thead>
                  <tr class="text-center">
                    <th>投稿ID</th>
                    <th>投稿文</th>
                    <th>通報数</th>
                    <th>詳細</th>
                  </tr>
                </thead>
                <tbody>
                  <% @posts.each do |post| %>
                    <tr class="text-center">
                      <th><%= post.id %></th>
                      <td><%= post.body %></td>
                      <td class="text-danger"><%= post.reports.count %></td>
                      <td><%= link_to "詳細", admin_post_path(post.id), class: "btn btn-sm btn-outline-success" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
