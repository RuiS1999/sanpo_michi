<div class="container-fluid">
  <div class="mx-lg-auto">
    <div class="text-center">
      <%= form_with model: @user, url: user_session_path, class: "form-signin" do |f| %>
        <h1 class="py-4">さんぽ道</h1>
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control my-2", id: "inputEmail" %></div>
        <div><%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control my-2",  id: "inputPassword" %></div>
        <div class="mt-3">
          <div><%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block my-2" %></div>
          <h5><%= render "user/shared/links" %></h5>
        </div>
        <p class="mt-5 mb-3 text-muted">© 2022</p>
      <% end %>
    </div>
  </div>
</div>



