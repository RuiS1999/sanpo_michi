<div class="container-fluid">
  <div class="mx-lg-auto">
    <div class="text-center">
      <%= form_with model: @user, url: user_session_path, class: "form-signin" do |f| %>
        <script src="app.js"></script>
        <p class="text-danger"><%= flash[:notice] %></p>
        <h1 class="pb-4">さんぽみち</h1>
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control my-2", id: "inputEmail" %>
        </div>
        <div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control my-2",  id: "inputPassword" %>
        </div>
        <div class="mt-3">
          <div><a><%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block my-2" %></a></div>
          <h5><%= render "user/shared/links" %></h5>
        </div>
        <p class="mt-5 mb-3 text-muted">© 2022-</p>
      <% end %>
    </div>
  </div>
</div>



