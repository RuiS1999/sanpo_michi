<div class="container">
  <div>
    <div>
      投稿一覧
    </div>
    <div class="col-8">
      <% @posts.each do |post| %>
        <div class="p-3 border">
          <div>
            <%= link_to user_path(post.user.user_name), class: "a_post_link" do %>
              <div class="row px-3">
                <div>
                  <%= image_tag post.user.get_profile_image(70,70), class:"rounded-circle profile_image_size"; %>
                </div>
                <div class="">
                  <%= post.user.account_name %> <span>@<%= post.user.user_name %></span>
                </div>
              </div>
            <% end %>
            <%= link_to post_path(post.id), class: "a_post_link" do %>
              <div class="py-4">
                  <%= post.body %>
              </div>
              <div class="mt-3">
                <% if post.post_image.attached? %>
                  <p><%= image_tag post.post_image, class:"card-img post_image_index" %></p>
                <% end %>
              </div>
            <% end %>
            <div class="border-top row pt-3">
              <dic>
                <span><i class="col-3"></i> <%= post.post_comments.count %>コメント</span>
              </dic>
              <div>
                <span><i class="col-3"></i> <%= post.favorites.count %>いいね</span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>