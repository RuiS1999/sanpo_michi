<div class="container">
  <div class="col-lg-9 col-md-8 mx-auto">
    <%= render "user/shared/error_messages", resource: @post %>
    <div>
      <%= form_with model: @post do |f| %>
        <div class="d-inline-block pb-2">
          <h3 class="px-3">新規投稿</h3>
        </div>
        <div>
          <div class="py-2">
            <p class="mb-0">○投稿画像</p>
            <%= f.file_field :post_image, placeholder: "画像を選択" %><br />
            <span class="small text-danger">※画像の投稿は１枚のみです</span>
          </div>
          <div class="py-2">
            <p class="mb-0">○投稿文入力欄</p>
            <%= f.text_area :body, placeholder: "投稿文", class: "input form-control", rows: 15 %>
          </div>
          <div class="py-2">
            <p class="mb-0">○ハッシュタグ入力欄</p>
            <%= f.text_area :hashbody, placeholder: "例) #風景 #喫茶店 #新発見", class: "input form-control", rows: 4 %>
          </div>
        </div>
        <div>
          <%= f.submit "新規投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>