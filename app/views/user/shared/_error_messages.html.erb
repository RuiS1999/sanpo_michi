<% if resource.errors.any? %>
  <div id="error_explanation">
    <h4><i class="fa-solid fa-triangle-exclamation"></i>入力情報に誤りがあります。</h4>
    <ul class="mt-2">
      <% resource.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
