<div class="container">
  <div class="d-flex justify-content-center">
    <div class="">
      <h5><%= link_to "<< 一覧へ戻る", step_logs_path %></h5>
      <div class="py-2">
        <table class="step-log-table">
          <tr>
            <th class="text-center">日付</th>
            <td><%= @step_log.start_time.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="text-center">歩数</th>
            <td><%= @step_log.number_of_step %> 歩</td>
          </tr>
          <tr>
            <th class="text-center">散歩時間</th>
            <td><%= @step_log.walking_time %> 分</td>
          </tr>
          <tr>
            <th class="text-center">消費カロリー</th>
            <td><%= @step_log.calorie %> kcal</td>
          </tr>
        </table>
      </div>
      <div class="my-2">
        <%= link_to "編集する", edit_step_log_path, class: "btn btn-success mr-2" %>
        <%= link_to "削除する", step_log_path, method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>