<div class="container">
  <div class="row p-0">
    <div class="col-lg-3">
      <%= render 'layouts/side' %>
    </div>
    <div class="col-lg-9">
      <nav>
        <div>
          <ul class="nav nav-tabs" id="nav-tab" role="tablist">
            <li class="nav-item">
              <%= link_to "名前で検索", search_users_path, class: "nav-link text-dark px-2" %>
            </li>
            <li class="nav-item">
              <%= link_to "記事を検索", search_posts_path, class: "nav-link text-dark px-2" %>
            </li>
            <li class="nav-item">
              <%= link_to "#タグを検索", search_post_hashtags_path, class: "nav-link text-dark active px-2" %>
            </li>
          </ul>
        </div>
      </nav>
      <div>
        <div>
          <%= render 'layouts/search_post_hashtag' %>
        </div>
        <div>
          <%= render 'layouts/posts', posts: @posts  %>
        </div>
      </div>
    </div>
  </div>
</div>
