<div class="container-fluid">
  <div class="col-lg-8 mx-lg-auto">
    <div class="row p-0">
      <div class="col-lg-3">
        <%= render 'layouts/side' %>
      </div>
      <div class="col-lg-9">
        <h1 class="text-center">プロフィール編集</h1>
        <%= form_with model: @user, url: user_path do |f| %>
        <%= render "layouts/error_messages", resource: @user %>
          <div>
            <div>
              <div class="p-3">
                <%= f.label :cover_image, "カバー画像", class: "text-forest" %>
                <div>
                  <%= f.file_field :cover_image, accept: 'image/jpg,image/jpeg,image/png' %>
                </div>
              </div>
              <div class="p-3">
                <%= f.label :profile_image, "プロフィール画像", class: "text-forest" %>
                <div>
                  <%= f.file_field :profile_image, accept: 'image/jpg,image/jpeg,image/png' %>
                </div>
              </div>
              <div class="p-3">
                <div>
                  <%= f.label :account_name, "ニックネーム", class: "text-forest" %>
                  <div>
                    <%= f.text_field :account_name, placeholder: "さんぽ太郎", autocomplete: "name", class: "w-100 input form-control" %>
                  </div>
                </div>
              </div>
              <div class="p-3">
                <div>
                  <%= f.label :introduction, "プロフィール", class: "text-forest" %>
                  <div>
                    <%= f.text_area :introduction, placeholder: "プロフィール",  rows: 7, class: "w-100 input form-control" %>
                  </div>
                </div>
              </div>
              <div class="p-3">
                <div>
                  <%= f.label :birth_date, "生年月日", class: "text-forest" %>
                  <div>
                    <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), class: "w-50" %>
                  </div>
                </div>
              </div>
              <div class="p-3">
                <div>
                  <%= f.label :sex, "性別", class: "text-forest" %>
                  <div>
                    <%= f.radio_button :sex, User.sexes.key(0) %>
                    <%= f.label :sex, "男性", value: User.sexes.key(0) %>
                    <%= f.radio_button :sex, User.sexes.key(1) %>
                    <%= f.label :sex, "女性", value: User.sexes.key(1) %>
                    <%= f.radio_button :sex, User.sexes.key(2) %>
                    <%= f.label :sex, "その他", value: User.sexes.key(2) %>
                  </div>
                </div>
              </div>
              <div class="py-4">
                <%= f.submit "変更", class: "btn btn-primary mx-1 px-4" %>
                <%= link_to users_retire_path, class:"btn btn-danger mx-2" do %>
                  退会画面へ<i class="fa-solid fa-angles-right"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
