<% user_favorites.each do |user_favorite| %>
  <div class="p-3 border-right border-left border-bottom">
    <div class="row">

      <!--プロフィール画像-->
      <div class="col-2 col-sm-1 p-1 p-sm-2">
        <%= link_to user_path(user_favorite.user.user_name), class: "a-post-link" do %>
          <div>
            <%= image_tag user_favorite.post.user.get_profile_image, class:"rounded-circle profile_img"; %>
          </div>
        <% end %>
      </div>

      <!--投稿情報-->
      <div class="col-10 col-sm-11 p-1 p-sm-2">
        <div class="">
          <strong class="h4"><%= link_to user_favorite.user.account_name, user_path(user_favorite.user.user_name), class: "a_user_link" %></strong>
          <span>@<%= user_favorite.user.user_name %></span>
        </div>

        <div>
          <%= link_to post_path(user_favorite.post.id), class: "a-post-link" do %>
            <div class="py-4">
              <%= user_favorite.post.body %>
            </div>
            <div class="mt-3">
              <% if user_favorite.post.post_image.attached? %>
                <p><%= image_tag user_favorite.post.index_post_image, class:"card-img post-image-index" %></p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="border-top">
          <div class="row pt-3">
            <div class="text-center col-6">
              <span>
                <% if user_signed_in? %>
                  <% if user_favorite.post.favorited_by?(current_user) %>
                    <%= link_to "♥#{user_favorite.post.favorites.count} いいね", post_favorites_path(user_favorite.post), method: :delete, class: "rounded-circle favorite-settled" %>
                  <% else %>
                    <%= link_to "♡#{user_favorite.post.favorites.count} いいね", post_favorites_path(user_favorite.post), method: :post, class: "rounded-circle favorite-not-settled" %>
                  <% end %>
                <% else %>
                  <%= link_to post_favorites_path(user_favorite.post), method: :post do %>
                    <%= link_to "♡#{user_favorite.post.favorites.count} いいね", post_favorites_path(user_favorite.post), method: :post, class: "rounded-circle favorite-not-settled" %>
                  <% end %>
                <% end %>
              </span>
            </div>
          </div>
          <div class="text-center col-6">
            <span><i class=""></i> <%= link_to user_favorite.post.post_comments.count, post_path(user_favorite.post) %>コメント</span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>