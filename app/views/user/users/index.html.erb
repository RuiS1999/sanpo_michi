<div class="container">
  <div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>投稿数</th>
            <th>フォロワー数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.account_name %> <span>@<%= user.user_name %></span></td>
              <td><%= user.posts.count %></td>
              <td></td>
              <td>
                <% unless current_user == user %>
                  <% if current_user.following?(user) %>
                    <%= link_to "フォロー外す",user_relationships_path(user.id), method: :delete %>
                  <% else %>
                    <%= link_to "フォロー",user_relationships_path(user.id), method: :POST %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>