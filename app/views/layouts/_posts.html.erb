<% posts.each do |post| %>
  <div class="p-3 border-right border-left border-bottom">
    <div class="row">

      <!--プロフィール画像-->
      <div class="col-2 col-sm-1 p-1 p-sm-2">
        <%= link_to user_path(post.user.user_name), class: "a-post-link" do %>
          <div>
            <%= image_tag post.user.get_profile_image, class:"rounded-circle profile_img"; %>
          </div>
        <% end %>
      </div>

      <!--投稿情報-->
      <div class="col-10 col-sm-11 p-1 p-sm-2">
        <div>
          <strong class=""><%= link_to post.user.account_name, user_path(post.user.user_name), class: "a_user_link" %></strong>
          <span class="text-truncate"><%= link_to " @#{post.user.user_name}", user_path(post.user.user_name), class: "a_user_name" %></span>
        </div>

        <div>
          <%= link_to post_path(post.id), class: "a-post-link" do %>
            <div class="py-2">
              <%= post.body %>
            </div>
            <div class="p-2 p-lg-3">
              <% if post.post_image.attached? %>
                <p><%= image_tag post.index_post_image, class:"card-img post-image-index" %></p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="border-top">
          <div class="row pt-3">
            <div class="text-center col-6">
              <span>
                <% if user_signed_in? %>
                  <% if post.favorited_by?(current_user) %>
                    <%= link_to "♥#{post.favorites.count} いいね", post_favorites_path(post), method: :delete, class: "rounded-circle favorite-settled" %>
                  <% else %>
                    <%= link_to "♡#{post.favorites.count} いいね", post_favorites_path(post), method: :post, class: "rounded-circle favorite-not-settled" %>
                  <% end %>
                <% else %>
                  <%= link_to post_favorites_path(post), method: :post do %>
                    <%= link_to "♡#{post.favorites.count} いいね", post_favorites_path(post), method: :post, class: "rounded-circle favorite-not-settled" %>
                  <% end %>
                <% end %>
              </span>
            </div>
            <div class="text-center col-6">
              <span>
                <%= link_to post_path(post), class: "text-dark" do %>
                  <%= post.post_comments.count %> コメント
                <% end %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>