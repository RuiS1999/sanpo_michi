<div>
  <% users.each do |user| %>
    <div class="row p-2 p-sm-4 mx-1 border">
      <!--プロフィール画像-->
      <div class="col-2 col-sm-1 p-0">
        <%= link_to user_path(user.user_name) do %>
          <%= image_tag user.get_profile_image, class:"rounded-circle profile_img"; %>
        <% end %>
      </div>

      <!--プロフィール情報-->
      <div class="col-10 col-sm-11 py-0 px-2">
        <div class="d-flex justify-content-between">
          <div>
            <div>
              <%= link_to user_path(user.user_name), class: "a_user_link" do %>
                <strong><%= user.account_name %></strong>
              <% end %>
            </div>
            <div>
              <p>@<%= user.user_name %></p>
            </div>
          </div>
          <div class="mx-3">
            <% if user_signed_in? %>
              <% if user.is_followed_by?(current_user) %>
                <%= link_to user_relationships_path(user.id), method: :delete do %>
                  <button type="button" class="btn btn-light border">フォロー解除</button>
                <% end %>
              <% else %>
                <%= link_to user_relationships_path(user.id), method: :post do %>
                  <button type="button" class="btn btn btn-secondary">フォロー</button>
                <% end %>
              <% end %>
            <% else %>
              <%= link_to about_path do %>
                <button type="button" class="btn btn btn-secondary">フォロー</button>
              <% end %>
            <% end %>
          </div>
        </div>
        <div>
          <%= user.introduction %>
        </div>
      </div>
    </div>
  <% end %>
</div>