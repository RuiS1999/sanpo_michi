<header class="shadow-sm">
  <nav class="navbar navbar-light fixed-top navbar-expand-lg" style="background-color: #e3f2fd;">
    <% if admin_signed_in? %>
      <%= link_to "さんぽ道", admin_root_path, class:"header-title navbar-brand"%>
    <% else %>
      <%= link_to "さんぽ道", root_path, class:"header-title navbar-brand"%>
    <% end %>
    <button class="navbar-toggler mx-5" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to user_path(current_user.user_name), class: "text-dark mx-2" do %>
                <i class="fa-solid fa-user"></i> マイページ
              <% end %>
            </span>
          </li>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to search_users_path, class: "text-dark mx-2" do %>
                <i class="fa-solid fa-magnifying-glass"></i> 話題を検索
              <% end %>
            </span>
          </li>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to posts_path, class: "text-dark mx-2" do %>
                <i class="fa-solid fa-signs-post"></i> 投稿一覧
              <% end %>
            </span>
          </li>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to users_path, class: "text-dark mx-2" do %>
                <i class="fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </span>
          </li>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to destroy_user_session_path, method: :delete, class: "text-dark mx-2" do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </span>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "about", about_path, class: "text-secondary nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "投稿一覧", posts_path, class: "text-secondary nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "text-secondary nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "text-secondary nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>